class Rectangle {
	init: width, height {
		self.width = width;
		self.height = height;
	}

	area {
		return self.width * self.height;
	}
}


class Square: Rectangle {
	init: width {
		super(width, width);  // Both do the same thing
		super.init(width, width);
	}
}

square = Square(10);
print square.area();
